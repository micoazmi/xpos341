
<div class="card card-primary">
	<div class="card-header">
		<h3 class="card-title">Search Transaction</h3>
	</div>

	<form asp-action="HistoryOrder">
		<div class="card-body">
			<div class="form-group">
				<label for="CodeTransaction">Code Transaction</label>
				<input type="text" class="form-control rounded-pill" id="CodeTransaction" name="CodeTransaction" placeholder="Code Transaction" />
			</div>

			<div class="row">
				<div class="col-6">
					<div class="form-group">
						<label for="MinDate">Min Date</label>
						<input type="date" class="form-control rounded-pill" id="MinDate" name="MinDate" placeholder="Min Date" />
					</div>
				</div>
				<div class="col-6">
					<div class="form-group">
						<label for="MaxDate">Max Date</label>
						<input type="date" class="form-control rounded-pill" id="MaxDate" name="MaxDate" placeholder="Max Date" />
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-6">
					<div class="form-group">
						<label for="MinAmount">Min Amount</label>
						<input type="number" class="form-control rounded-pill" id="MinAmount" name="MinAmount" placeholder="0" />
					</div>
				</div>
				<div class="col-6">
					<div class="form-group">
						<label for="MaxAmount">Max Amount</label>
						<input type="number" class="form-control rounded-pill" id="MaxAmount" name="MaxAmount" placeholder="0" />
					</div>
				</div>
			</div>
		</div>

		<div class="card-footer">
			<button type="submit" class="btn btn-primary btn-rounded float-right">Search</button>
		</div>
	</form>

</div>

<script>

	$("#MinDate").change(function () {
		var min = $(this).val()
		$("#MaxDate").attr({ "min": min })
	})

	$("#MaxDate").change(function () {
		var max = $(this).val()
		$("#MinDate").attr({ "max": max })
	})



</script>

