@{
    ViewData["Title"] = "Create Friend";
}

<div class="h4 mb-4">Create Form Friend</div>

<div class="mb-3 row">
    <label for="Id" class="col-sm-2 col-form-label">Id</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="Id" name="Id" value="@Model.Id" readonly>
    </div>
</div>
<div class="mb-3 row">
    <label for="Name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" readonly>
    </div>
</div>
<div class="mb-3 row">
    <label for="Address" class="col-sm-2 col-form-label">Address</label>
    <div class="col-sm-10">
        <textarea type="text" class="form-control" id="Address" name="Address" readonly>@Model.Address</textarea>
    </div>
</div>


<div class="mb-4 row">
    <div class="col-sm-10">
        <a class="btn btn-light" asp-controller="Friend" asp-action="Index">Back to List</a>
    </div>
</div>